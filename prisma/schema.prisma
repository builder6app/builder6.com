// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("PLAY_MONGODB_URI")
}

model Builder6Object {
  id          String   @id @map("_id")
  projectId   String?
  space       String?  // Organization ID
  name        String
  label       String
  description String?
  icon        String?
  schema      String
  owner       String?
  created     DateTime @default(now())
  modified    DateTime @updatedAt

  @@map("builder6_objects")
}

model Page {
  id              String   @id @map("_id")
  projectId       String?
  space           String?  // Organization ID
  name            String?
  code            String
  metaTitle       String?
  slug            String?
  addToNavigation Boolean?
  sortOrder       Int?
  owner           String?
  created         DateTime @default(now())
  createdBy       String?  @map("created_by")
  modified        DateTime @updatedAt
  modifiedBy      String?  @map("modified_by")

  @@map("builder6_pages")
}

model Project {
  id                String   @id @map("_id")
  name              String
  description       String?
  slug              String?  @unique
  homePage          String?
  displayNavigation Boolean?
  navigationStyle   String?
  themeColor        String?
  space             String?
  icon              String?
  owner             String?
  created           DateTime @default(now())
  createdBy         String?  @map("created_by")
  modified          DateTime @updatedAt
  modifiedBy        String?  @map("modified_by")

  @@map("builder6_projects")
}

model PageVersion {
  id         String   @id @map("_id")
  pageId     String
  space      String?  // Organization ID
  code       String
  versionId  String
  owner      String?
  created    DateTime @default(now())
  createdBy  String?  @map("created_by")
  modified   DateTime? @updatedAt
  modifiedBy String?  @map("modified_by")

  @@map("builder6_page_versions")
}

// Better-Auth Models mapping
model Space {
  id        String   @id @map("_id")
  name      String
  slug      String?
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt

  @@map("spaces")
}

model SpaceUser {
  id             String   @id @map("_id")
  space String   @map("space")
  user         String   @map("user")
  role           String
  createdAt      DateTime @default(now())
  updatedAt      DateTime? @updatedAt

  @@map("space_users")
}

