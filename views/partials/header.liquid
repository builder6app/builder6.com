<header class="flex items-center justify-between px-6 py-3 border-b border-white/10 bg-[#1c1c1e]/80 backdrop-blur-xl z-50 {% unless is_editor %}sticky top-0{% endunless %}">
    <div class="flex items-center gap-3">
        <div class="flex items-center gap-3 cursor-pointer" onclick="window.location.href='/app'">
            <img src="/logo.svg" alt="Logo" class="w-8 h-8 drop-shadow-md">
            <h1 class="font-semibold text-lg tracking-tight text-white">Builder6 <span class="text-xs font-normal text-gray-400 ml-1 bg-white/10 px-2 py-0.5 rounded-full">beta</span></h1>
        </div>
    </div>
    <div class="flex items-center gap-4">
        <!-- Unified Auth & Menu -->
        <div class="relative ml-4 pl-4 border-l border-white/10" id="authWrapper">
            <!-- Login Button (Default Visible if no user) -->
            <a href="/login" id="signInBtn" class="{% if user %}hidden{% endif %} text-gray-300 hover:text-white text-sm font-medium transition-colors">Sign In</a>

            <!-- User Menu Trigger (Visible if user exists) -->
            <button id="userMenuBtn" class="{% unless user %}hidden{% endunless %} flex items-center gap-2 group focus:outline-none">
                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-xs font-bold shadow-inner ring-2 ring-transparent group-hover:ring-white/20 transition-all">
                    <span id="userAvatar">{{ user.name | slice: 0, 1 | upcase | default: 'U' }}</span>
                </div>
                <span id="userName" class="text-sm text-gray-300 group-hover:text-white transition-colors hidden md:block">{{ user.name }}</span>
                <svg class="w-3 h-3 text-gray-500 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
            </button>

            <!-- Dropdown Menu -->
            <div id="userDropdown" class="hidden absolute right-0 top-full mt-2 w-64 bg-[#1c1c1e] border border-white/10 rounded-xl shadow-2xl overflow-hidden z-50 ring-1 ring-white/5 backdrop-blur-xl transform origin-top-right transition-all">
                <div class="p-1">
                    <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">
                        Organizations
                    </div>
                    <div id="orgList" class="space-y-1 mb-2">
                        <!-- Org items will be injected here -->
                    </div>
                    <button id="createOrgBtn" class="w-full flex items-center gap-2 px-3 py-2 text-xs text-blue-400 hover:bg-blue-500/10 rounded-lg transition-colors mb-2">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                        Create Organization
                    </button>
                    <div class="h-px bg-white/10 my-1 mx-2"></div>
                    <a href="/app" class="flex items-center gap-2 px-3 py-2 text-sm text-gray-300 hover:bg-white/10 hover:text-white rounded-lg transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
                        Projects
                    </a>
                    <div class="h-px bg-white/10 my-1 mx-2"></div>
                    <button id="signOutBtn" class="w-full flex items-center gap-2 px-3 py-2 text-sm text-red-400 hover:bg-red-500/10 hover:text-red-300 rounded-lg transition-colors text-left">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path></svg>
                        Sign Out
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const userMenuBtn = document.getElementById('userMenuBtn');
        const userDropdown = document.getElementById('userDropdown');
        
        if (userMenuBtn && userDropdown) {
            userMenuBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                userDropdown.classList.toggle('hidden');
                if (!userDropdown.classList.contains('hidden')) {
                    loadOrganizations();
                }
            });
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (userDropdown && !userDropdown.contains(e.target) && !userMenuBtn.contains(e.target)) {
                userDropdown.classList.add('hidden');
            }
        });

        // Organization Management
        const orgList = document.getElementById('orgList');
        const createOrgBtn = document.getElementById('createOrgBtn');
        let activeOrgId = null;

        async function loadOrganizations() {
            try {
                // Fetch session to get active org
                const sessionRes = await fetch('/api/auth/get-session');
                const sessionData = await sessionRes.json();
                activeOrgId = sessionData.session?.activeOrganizationId;

                // Fetch org list
                const orgRes = await fetch('/api/auth/organization/list');
                if (!orgRes.ok) return;
                const orgs = await orgRes.json();

                renderOrgs(orgs);
            } catch (err) {
                console.error('Failed to load organizations', err);
            }
        }

        function renderOrgs(orgs) {
            if (!orgList) return;
            orgList.innerHTML = '';
            
            if (orgs.length === 0) {
                orgList.innerHTML = '<div class="px-3 py-2 text-xs text-gray-500 italic">No organizations</div>';
                return;
            }

            orgs.forEach(org => {
                const isActive = org.id === activeOrgId;
                const btn = document.createElement('button');
                btn.className = `w-full flex items-center justify-between px-3 py-2 text-sm rounded-lg transition-colors text-left ${isActive ? 'bg-blue-500/20 text-blue-300' : 'text-gray-300 hover:bg-white/10 hover:text-white'}`;
                btn.innerHTML = `
                    <span class="truncate">${org.name}</span>
                    ${isActive ? '<svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>' : ''}
                `;
                btn.onclick = () => switchOrganization(org.id);
                orgList.appendChild(btn);
            });
        }

        async function switchOrganization(orgId) {
            if (orgId === activeOrgId) return;
            try {
                const res = await fetch('/api/auth/organization/set-active', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ organizationId: orgId })
                });
                
                if (res.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to switch organization');
                }
            } catch (err) {
                console.error(err);
                alert('Error switching organization');
            }
        }

        if (createOrgBtn) {
            createOrgBtn.addEventListener('click', async () => {
                const name = prompt('Enter organization name:');
                if (!name) return;
                
                const slug = name.toLowerCase().replace(/[^a-z0-9]/g, '-');
                
                try {
                    const res = await fetch('/api/auth/organization/create', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ name, slug })
                    });
                    
                    if (res.ok) {
                        const newOrg = await res.json();
                        // Automatically switch to new org
                        await switchOrganization(newOrg.id || newOrg.organization?.id); // better-auth returns object
                    } else {
                        const err = await res.json();
                        alert(err.message || 'Failed to create organization');
                    }
                } catch (err) {
                    console.error(err);
                    alert('Error creating organization');
                }
            });
        }
        
        // Handle Sign Out for non-SPA pages (like my-snippets)
        const signOutBtn = document.getElementById('signOutBtn');
        if (signOutBtn) {
            signOutBtn.addEventListener('click', async () => {
                try {
                    await fetch('/api/auth/sign-out', { method: 'POST' });
                    window.location.href = '/';
                } catch (e) {
                    console.error(e);
                }
            });
        }
    });
</script>